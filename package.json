{
  "name": "@nirmalparmar/resize-image",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript package for resizing images in the browser.",
  "keywords": [
    "image",
    "resize",
    "browser",
    "canvas",
    "typescript",
    "jpeg",
    "png",
    "webp",
    "avif",
    "gif",
    "photo",
    "compress",
    "optimize",
    "convert",
    "resizer",
    "client-side",
    "frontend"
  ],
  "homepage": "https://resizeimages.org",
  "bugs": {
    "url": "https://github.com/nirmalparmar/resize-image/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirmalparmar/resize-image.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "postinstall": "node -e \"if(!process.env.RESIZE_IMAGE_SILENT){console.log('Thanks for installing resize-image! Try the web app at https://resizeimages.org');}\""
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jsdom": "27.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "funding": {
    "type": "website",
    "url": "https://resizeimages.org"
  },
  "packageManager": "npm@10"
}
